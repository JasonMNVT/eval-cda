{% extends 'base.html.twig' %}

{% block title %}Computer
{% endblock %}

{% block body %}
	<h1>Computer</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ computer.id }}</td>
			</tr>
			<tr>
				<th>Model</th>
				<td>{{ computer.model }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ computer.description }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ computer.price }}</td>
			</tr>
			<tr>
				<th>Year</th>
				<td>{{ computer.year }}</td>
			</tr>
			<tr>
				<th>SerieNumber</th>
				<td>{{ computer.serieNumber }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ computer.image }}</td>
			</tr>
		</tbody>
	</table>

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_computer_index') }}">back to list</a>

		<a href="{{ path('app_computer_edit', {'id': computer.id}) }}">edit</a>

		{{ include('computer/_delete_form.html.twig') }}
	{% endif %}

{% endblock %}
